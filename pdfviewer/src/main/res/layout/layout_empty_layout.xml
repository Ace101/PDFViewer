<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/id_empty_layout_icon"
        android:layout_width="@dimen/qb_px_100"
        android:layout_height="@dimen/qb_px_110"
        android:layout_marginTop="@dimen/qb_px_110"
        app:layout_constraintBottom_toTopOf="@id/id_empty_layout_tittle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_collection_dis" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/id_empty_layout_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_22"
        android:textColor="@color/second_title_text_color"
        android:textSize="@dimen/qb_px_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_empty_layout_icon"
        tools:text="No files add to Favourites" />

</android.support.constraint.ConstraintLayout>