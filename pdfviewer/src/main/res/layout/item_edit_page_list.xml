<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_item_edit_page_rel"
        android:layout_width="@dimen/qb_px_104"
        android:layout_height="wrap_content"
        android:background="@color/color_page_edit_frame"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_item_edit_page_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/qb_px_1"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/id_item_edit_page_bookmark"
            android:layout_width="@dimen/qb_px_10"
            android:layout_height="@dimen/qb_px_14"
            android:layout_alignParentRight="true"
            android:background="@drawable/view_pic_bookmark"/>

        <CheckBox
            android:id="@+id/id_item_edit_page_select"
            android:layout_width="@dimen/qb_px_30"
            android:layout_height="@dimen/qb_px_30"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:button="@drawable/checkbox_select"
            android:gravity="top"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/id_item_edit_page_pageNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/theme_color_black"
        android:textSize="@dimen/qb_px_14"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_22"/>

</LinearLayout>