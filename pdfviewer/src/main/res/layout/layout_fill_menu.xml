<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/id_shape_include_fill_menu_layout"
    android:visibility="gone"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/qb_px_10"
        android:paddingRight="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginBottom="@dimen/qb_px_10">

        <ImageView
            android:layout_width="@dimen/qb_px_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/qb_px_6"
            android:src="@drawable/draw_ic_opacity"/>

        <SeekBar
            android:id="@+id/id_shape_fill_alpha_bar"
            style="@style/popup_window_seek_bar" />

        <TextView
            android:id="@+id/id_shape_fill_alpha_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/page_indicator"
            android:textSize="@dimen/qb_px_10"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="0%"/>

    </LinearLayout>

</LinearLayout>