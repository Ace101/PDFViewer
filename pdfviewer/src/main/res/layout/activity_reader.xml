<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/id_reader_document"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <include
        android:id="@+id/id_reader_about_us_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/layout_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"/>

    <include
        android:id="@+id/id_reader_ink_operate"
        layout="@layout/layout_ink_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/qb_px_17"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/id_reader_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_24"
        android:textColor="@color/white_color"
        android:gravity="center"
        android:paddingLeft="@dimen/qb_px_4"
        android:paddingRight="@dimen/qb_px_4"
        android:background="@drawable/page_indicator_bg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/qb_px_55"
        android:layout_marginLeft="@dimen/qb_px_15"/>

    <ImageView
        android:id="@+id/id_reader_floating_backPage"
        android:layout_width="@dimen/qb_px_40"
        android:layout_height="@dimen/qb_px_40"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/qb_px_10"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/qb_px_65"
        android:background="@drawable/circle_bg"
        android:src="@drawable/ic_back_white"
        android:padding="@dimen/qb_px_8"
        android:scaleType="center"
        android:layout_alignParentRight="true" />

    <include
        android:id="@+id/id_reader_toolers"
        layout="@layout/layout_reader_toolers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>