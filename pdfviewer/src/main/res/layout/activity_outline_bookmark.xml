<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/id_OandB_toolbar"
        layout="@layout/layout_toolbar"
        android:minHeight="?attr/actionBarSize"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/id_OandB_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/tab_selector"
        android:layout_below="@id/id_OandB_toolbar"/>

    <com.kdanmobile.pdfviewer.screenui.widget.NoScrollViewPager
        android:id="@+id/id_OandB_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_OandB_tab_layout"/>

</RelativeLayout>