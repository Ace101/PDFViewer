<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/id_bookmark_list_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_bookmark_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <RelativeLayout
        android:id="@+id/id_bookmark_list_dis"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/id_bookmark_list_dis_iv"
            android:layout_width="@dimen/qb_px_100"
            android:layout_height="@dimen/qb_px_110"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_bookmark_dis" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_bookmark_list_dis_iv"
            android:layout_centerHorizontal="true"
            android:text="@string/bookmark_dis"
            android:textSize="@dimen/qb_px_18"/>
    </RelativeLayout>
</RelativeLayout>