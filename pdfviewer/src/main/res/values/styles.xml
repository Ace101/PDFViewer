<resources>

    <!-- Base application theme. -->

    <style name="AppThemeNoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color_blue</item>
        <item name="colorPrimaryDark">@color/theme_color_blue</item>
        <item name="colorAccent">@color/theme_color_blue</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Toolbar.TitleText.White" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="imageView_reader_tool_relativeLayout">
        <item name="android:layout_width">@dimen/qb_px_67</item>
        <item name="android:layout_height">@dimen/qb_px_48</item>
    </style>
    <style name="textView_reader_tool_pop">
        <item name="android:layout_width">@dimen/qb_px_217</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/qb_px_14</item>
