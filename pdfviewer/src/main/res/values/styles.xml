        <item name="android:gravity">center_vertical|start</item>
        <item name="android:minHeight">@dimen/qb_px_24</item>
        <item name="android:paddingStart">@dimen/qb_px_16</item>
        <item name="android:paddingTop">@dimen/qb_px_32</item>
