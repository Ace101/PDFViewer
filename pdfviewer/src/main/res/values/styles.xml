    </style>

    <style name="popup_window_seek_bar">
        <item name="android:layout_width">@dimen/qb_px_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">8</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/qb_px_0</item>
        <item name="android:paddingBottom">@dimen/qb_px_8</item>
        <item name="android:paddingLeft">@dimen/qb_px_16</item>
        <item name="android:paddingRight">@dimen/qb_px_16</item>
        <item name="android:paddingTop">@dimen/qb_px_12</item>
        <item name="android:progressDrawable">@drawable/seek_progress_one</item>
        <item name="android:thumb">@drawable/seek_thumb_one</item>
    </style>

    <style name="sign_edit_seek_bar">
        <item name="android:layout_width">@dimen/qb_px_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">6</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/qb_px_0</item>
        <item name="android:paddingBottom">@dimen/qb_px_8</item>
        <item name="android:paddingLeft">@dimen/qb_px_16</item>
        <item name="android:paddingRight">@dimen/qb_px_16</item>
        <item name="android:paddingTop">@dimen/qb_px_12</item>
        <item name="android:progressDrawable">@drawable/seek_progress_one</item>
        <item name="android:thumb">@drawable/seek_thumb_one</item>
    </style>

    <style name="popup_window_select_image">
        <item name="android:layout_width">@dimen/qb_px_50</item>
        <item name="android:layout_height">@dimen/qb_px_43</item>
        <item name="android:layout_marginLeft">@dimen/qb_px_30</item>
    </style>

    <style name="common_dialog_helper_style" parent="Base.Theme.AppCompat.Light.Dialog">
        <!--不设置在6.0以上会出现，宽度不充满屏幕的情况-->
        <item name="windowMinWidthMinor">80%</item>

        <!-- 取消标题栏，如果在代码中settitle的话会无效 -->
        <item name="android:windowNoTitle">true</item>

        <!-- 标题的和Message的文字颜色 -->
        <!--<item name="android:textColorPrimary">@color/black</item>-->

        <!-- 在使用v7包的alertDialog中无效，6.0中的app.alertDialog有效，这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/colorPrimary</item>

        <!-- 6.0有效，设置整个背景的颜色，在颜色后面就透明度无法使dailog透明 -->
        <!-- 慎用，会出现奇怪的背景边框-->
        <!--<item name="android:background">@color/white</item>-->

        <!-- 有时无效，在某些系统上面设置背景颜色之后出现奇怪的背景，处这里设置背景为透明，为了隐藏边框 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:windowFrame">@null</item>-->

        <!-- 进入和退出动画，左进右出（系统自带） -->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->

        <!-- 按钮字体颜色,全部一起改，单个改需要在Java代码中修改 -->
        <item name="colorAccent">@color/theme_color_black</item>
    </style>
    <style name="progress_dialog_helper_style" parent="Base.Theme.AppCompat.Light.Dialog">
        <!--不设置在6.0以上会出现，宽度不充满屏幕的情况-->
        <item name="windowMinWidthMinor">80%</item>

        <!-- 取消标题栏，如果在代码中settitle的话会无效 -->
        <item name="android:windowNoTitle">true</item>

        <!-- 标题的和Message的文字颜色 -->
        <!--<item name="android:textColorPrimary">@color/black</item>-->

        <!-- 在使用v7包的alertDialog中无效，6.0中的app.alertDialog有效，这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/colorPrimary</item>

        <!-- 6.0有效，设置整个背景的颜色，在颜色后面就透明度无法使dailog透明 -->
        <!-- 慎用，会出现奇怪的背景边框-->
        <!--<item name="android:background">@color/white</item>-->

        <!-- 有时无效，在某些系统上面设置背景颜色之后出现奇怪的背景，处这里设置背景为透明，为了隐藏边框 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:windowFrame">@null</item>-->

        <!-- 进入和退出动画，左进右出（系统自带） -->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->

        <!-- 按钮字体颜色,全部一起改，单个改需要在Java代码中修改 -->
        <item name="colorAccent">@color/theme_color_cyan</item>
    </style>

    <style name="page_turn_relativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/qb_px_48</item>
    </style>

    <style name="page_turn_text">
        <item name="android:layout_width">@dimen/qb_px_200</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/qb_px_16</item>
        <item name="android:textColor">@color/page_turn_text_color</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/qb_px_16</item>
    </style>

    <style name="page_turn_image">
        <item name="android:layout_width">@dimen/qb_px_36</item>
        <item name="android:layout_height">@dimen/qb_px_26</item>
        <item name="android:src">@drawable/ic_right_blue</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/qb_px_18</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="more_setting_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_setting_menu_item_bg</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:minHeight">@dimen/qb_px_24</item>
        <item name="android:paddingStart">@dimen/qb_px_16</item>
        <item name="android:textColor">@color/color_setting_menu_item_title</item>
    </style>

    <style name="more_setting_constraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/qb_px_16</item>
        <item name="android:minHeight">@dimen/qb_px_48</item>
        <item name="background">@drawable/layer_list_setting_item_bg</item>
    </style>

    <style name="more_setting_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/qb_px_0</item>
        <item name="android:layout_marginEnd">@dimen/qb_px_16</item>
        <item name="android:drawablePadding">@dimen/qb_px_34</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/color_setting_about_us_text</item>
        <item name="android:textSize">@dimen/qb_px_16</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="more_setting_item_sub_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/qb_px_0</item>
        <item name="android:layout_marginEnd">@dimen/qb_px_16</item>
        <item name="android:layout_marginStart">@dimen/qb_px_16</item>
        <item name="android:drawableEnd">@drawable/list_ic_putin</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/color_setting_menu_item_title</item>
        <item name="android:textSize">@dimen/qb_px_14</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintWidth_percent">0.5</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pop_hide</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="stamp_text_color_choose">
        <item name="android:layout_width">@dimen/qb_px_48</item>
        <item name="android:layout_height">@dimen/qb_px_48</item>
