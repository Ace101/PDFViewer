    <style name="imageView_reader_tool_imageView">
        <item name="android:layout_width">@dimen/qb_px_26</item>
        <item name="android:layout_height">@dimen/qb_px_26</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="imageButton_ink_operate">
        <item name="android:layout_width">@dimen/qb_px_40</item>
        <item name="android:layout_height">@dimen/qb_px_40</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ink_white_button</item>
    </style>

    <style name="button_page_edit_tool">
        <item name="android:layout_width">@dimen/qb_px_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/qb_px_10</item>
        <item name="android:textSize">@dimen/qb_px_12</item>
