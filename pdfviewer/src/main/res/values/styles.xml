    <style name="reader_info_title">
        <item name="android:layout_width">@dimen/qb_px_0</item>
        <item name="android:layout_height">@dimen/qb_px_45</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textColor">@color/theme_color_black</item>
    </style>

    <style name="reader_info_subTitle">
        <item name="android:layout_width">@dimen/qb_px_0</item>
        <item name="android:layout_height">@dimen/qb_px_45</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">@dimen/qb_px_10</item>
